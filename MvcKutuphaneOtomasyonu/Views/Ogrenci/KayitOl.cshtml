@model MvcKutuphaneOtomasyonu.Models.Entity.OGRENCI
@{
    ViewBag.Title = "KayitOl";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<!DOCTYPE html>
<html>

<!-- Head -->
<head>

    <title>Library Member Login Form A Flat Responsive Widget Template :: W3layouts</title>

    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="keywords" content="Library Member Login Form Widget Responsive, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- //Meta-Tags -->
    <!-- Style -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all">

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900" rel="stylesheet">
    <!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

    <h1>KÜTÜPHANE GİRİŞ FORMU</h1>

    <div class="container w3layouts agileits">



        <div class="login w3layouts agileits">
            <h2>Kayıt ol</h2>
            @using (Html.BeginForm("KayitOl", "Ogrenci", FormMethod.Post))
            {
                <div>
                    <label>Ad</label>
                    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
                </div>
                <div>
                    <label>Soyad</label>
                    @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control" })
                </div>
                <div>
                    <label>Mezuniyet Durumu</label>
                    @Html.TextBoxFor(x => x.MezuniyetDurumu, new { @class = "form-control" })
                </div>
                <div>
                    <label><b>Okul Seçiniz</b></label>
                    @Html.DropDownListFor(x => x.OKUL.OkulId, (IEnumerable<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
                </div>
                <div>
                    <label><b>Bölüm Seçiniz</b></label>
                    @Html.DropDownListFor(x => x.BOLUM.BolumId, (IEnumerable<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
                </div>
                <div>
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.Telefon, new { @class = "form-control" })
                </div>
                <div>
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.Adres, new { @class = "form-control" })
                </div>
                <div>
                    <label>Mail Adresi</label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
                </div>
                <div>
                    <label>Şifre</label>
                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
                </div>
                <div class="send-button w3layouts agileits">
                    <form>
                        <input type="submit" value="Kayıt Ol">
                    </form>
                </div>
                <div class="clear"></div>
            }

        </div>

        <div class="clear"></div>

    </div>

    <div class="footer w3layouts agileits">
        <p> &copy; 2016 Library Member Login Form. All Rights Reserved | Design by <a href="http://w3layouts.com" target="_blank">W3layouts</a></p>
    </div>

</body>
<!-- //Body -->

</html>