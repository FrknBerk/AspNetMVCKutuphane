@model MvcKutuphaneOtomasyonu.Models.Entity.KATEGORI
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        @using (Html.BeginForm("KategoriGuncelle", "Yonetici", FormMethod.Post))
        {
            <div style="margin-top:30px;">
                <label><b>Bölüm Id</b></label>
                @Html.TextBoxFor(x => x.KategoriId, new { @class = "form-control", @readonly = "readonly" })
            </div>
            <div style="margin-top:30px;">
                <label><b>Bölüm Adı</b></label>
                @Html.TextBoxFor(x => x.KategoriAd, new { @class = "form-control" })
            </div>
            <div style="margin-top:15px;">
                <button class="btn btn-success">Kategori Güncelle</button>
            </div>

        }
    </div>

</body>
</html>
